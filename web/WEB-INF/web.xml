<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.jiadong.web.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Grade -->
    <servlet>
        <servlet-name>gradeListServlet</servlet-name>
        <servlet-class>com.jiadong.web.GradeListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>gradeDeleteServlet</servlet-name>
        <servlet-class>com.jiadong.web.GradeDeleteServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>gradeSaveServlet</servlet-name>
        <servlet-class>com.jiadong.web.GradeSaveServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>gradeListServlet</servlet-name>
        <url-pattern>/gradeList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gradeDeleteServlet</servlet-name>
        <url-pattern>/gradeDel</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gradeSaveServlet</servlet-name>
        <url-pattern>/gradeSave</url-pattern>
    </servlet-mapping>
    
    <!-- Student -->
    <servlet>
        <servlet-name>studentListServlet</servlet-name>
        <servlet-class>com.jiadong.web.StudentListServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>studentListServlet</servlet-name>
        <url-pattern>/studentList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>studentDeleteServlet</servlet-name>
        <servlet-class>com.jiadong.web.StudentDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>studentDeleteServlet</servlet-name>
        <url-pattern>/studentDel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>studentSaveServlet</servlet-name>
        <servlet-class>com.jiadong.web.StudentSaveServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>studentSaveServlet</servlet-name>
        <url-pattern>/studentSave</url-pattern>
    </servlet-mapping>

    
    <servlet>
        <servlet-name>gradeListComboServlet</servlet-name>
        <servlet-class>com.jiadong.web.GradeListComboServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>gradeListComboServlet</servlet-name>
        <url-pattern>/gradeComboList</url-pattern>
    </servlet-mapping>
    

</web-app>